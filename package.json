{
  "private": true,
  "name": "value-creator",
  "description": "",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:tailwind": "tailwindcss --minify -o app/styles/tailwind.css",
    "deploy": "npm run build && wrangler publish",
    "dev": "NODE_ENV=development remix build && run-p dev:*",
    "dev:miniflare": "NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:remix": "remix watch",
    "dev:tailwind": "tailwindcss -o app/styles/tailwind.css --watch",
    "format": "prettier **/* --write",
    "start": "NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.4.0",
    "@remix-run/cloudflare-workers": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "canvas-confetti": "^1.4.0",
    "date-fns": "^2.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.4.0",
    "@types/canvas-confetti": "^1.4.2",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.15",
    "autoprefixer": "^10.0.2",
    "esbuild": "0.13.14",
    "miniflare": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false
}
