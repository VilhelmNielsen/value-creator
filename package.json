{
  "private": true,
  "name": "value-creator",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:tailwind && npm run build:remix && npm run build:worker",
    "build:remix": "remix build",
    "build:tailwind": "tailwindcss --minify -o app/styles/tailwind.css",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "deploy": "npm run build && wrangler publish",
    "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:remix\"",
    "dev:remix": "remix watch",
    "dev:tailwind": "tailwindcss -o app/styles/tailwind.css --watch",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "postinstall": "remix setup cloudflare-workers",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "canvas-confetti": "^1.4.0",
    "date-fns": "^2.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.1.1",
    "@types/canvas-confetti": "^1.4.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
